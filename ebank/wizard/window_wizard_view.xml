<?xml version="1.0" encoding="utf-8"?>

<openerp>
     <data>
         <record id="ebank_wizard_form" model="ir.ui.view">
            <field name="name">ebank_wizard_form</field>
            <field name="model">ebank.wizard</field>
            <field name="arch" type="xml">
                <form string="Window">
                    <group>
                        <field name="ebank_3_transaction_type"/>
                        <field name="platform"/>
                        <field name="ebank_2_service_identifier" attrs="{'invisible':[('flag_ebank_2','=',False)],
                                    'required':[('flag_ebank_2','=',True)]}"/>
                        <field name="ebank_4_total_value" attrs="{'invisible':[('flag_ebank_4','=',False)],
                                    'required':[('flag_ebank_4','=',True)]}"/>
                        <field name="ebank_11_location_code" attrs="{'invisible':[('flag_ebank_11','=',False)],
                                    'required':[('flag_ebank_11','=',True)]}"/>
                        <field name="ebank_12_local_transaction_time" attrs="{'invisible':[('flag_ebank_12','=',False)],
                                    'required':[('flag_ebank_12','=',True)]}"/>
                        <field name="ebank_13_local_transaction_date" attrs="{'invisible':[('flag_ebank_13','=',False)],
                                    'required':[('flag_ebank_13','=',True)]}"/>
                        <field name="ebank_15_compensation_date" attrs="{'invisible':[('flag_ebank_15','=',False)],
                                    'required':[('flag_ebank_15','=',True)]}"/>
