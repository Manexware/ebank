                        <field name="flag_ebank_49" invisible="1"/>
                    </group>
                    <footer>
                        <button name="consult" string="Consult" type="object" class="oe_highlight" attrs="{'invisible': [('ebank_3_transaction_type', '!=', '000003')]}"/>
                        <button name="back" string="Back" type="object" class="oe_highlight" attrs="{'invisible': [('ebank_3_transaction_type', '!=', '000002')]}"/>
                        <button name="pay" string="Pay" type="object" class="oe_highlight" attrs="{'invisible': [('ebank_3_transaction_type', '!=', '000001')]}"/>
                        or<button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
         </record>

         <record id="window_wizard_action" model="ir.actions.act_window">
             <field name="name">Window</field>
             <field name="res_model">ebank.wizard</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_mode">form</field>
             <field name="view_id" ref="ebank_wizard_form"/>
             <field name="context">{}</field>
             <field name="target">new</field>
       </record>
     </data>
 </openerp>
