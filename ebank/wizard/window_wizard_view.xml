                                    'required':[('flag_ebank_49','=',True)]}"/>
                        <field name ="response" readonly="1" />
                        <field name="flag_ebank_2" invisible="1" />
                        <field name="flag_ebank_4" invisible="1" />
                        <field name="flag_ebank_11" invisible="1"/>
                        <field name="flag_ebank_12" invisible="1"/>
                        <field name="flag_ebank_13" invisible="1"/>
                        <field name="flag_ebank_15" invisible="1"/>
                        <field name="flag_ebank_19" invisible="1"/>
