                                    'required':[('flag_ebank_28','=',True)]}"/>
                        <field name="ebank_32_setting_id" attrs="{'invisible':[('flag_ebank_32','=',False)],
                                    'required':[('flag_ebank_32','=',True)]}"/>
                        <field name="ebank_42_pay_id" attrs="{'invisible':[('flag_ebank_42','=',False)],
                                    'required':[('flag_ebank_42','=',True)]}"/>
                        <field name="ebank_43_back_reason" attrs="{'invisible':[('flag_ebank_43','=',False)],
                                    'required':[('flag_ebank_43','=',True)]}"/>
                        <field name="ebank_45_name_lastname" attrs="{'invisible':[('flag_ebank_45','=',False)],
                                    'required':[('flag_ebank_45','=',True)]}"/>
